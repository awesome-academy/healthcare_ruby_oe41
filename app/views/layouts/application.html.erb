<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%#=========css============= %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= stylesheet_link_tag "static_pages", media: "all", "data-turbolinks-track": "reload" %>
    <%= stylesheet_link_tag "account", media: "all", "data-turbolinks-track": "reload" %>
    <%= stylesheet_link_tag "sessions", media: "all", "data-turbolinks-track": "reload" %>
    <%= stylesheet_link_tag "reviews", media: "all", "data-turbolinks-track": "reload" %>
    <%= stylesheet_link_tag "services", media: "all", "data-turbolinks-track": "reload" %>

    <%#=========javascript============= %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <%= render "shared/header" %>
    <div class="main">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
      <%= yield %>
    </div>
    <%= render "shared/footer" %>
    </body>
</html>
