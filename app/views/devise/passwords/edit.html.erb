<div class="container signup container-sign">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <!--title-->
      <div class="card-header">
        <h3><%= t "devise.password.change_your_pw" %></h3>
      </div>
      <div class="card-body">
      <h2></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>


        <!-- password-->
        <div class="input-group form-group">
          <div class="input-group-prepend">
            <%= f.label :password, autofocus: true, class:"input-group-text"  %>
          </div>
          <%= f.password_field :password, class: "form-control", placeholder: :password %>
        </div>

        <!-- password_confirmation-->
        <div class="input-group form-group">
          <div class="input-group-prepend">
            <%= f.label :password_confirmation, class:"input-group-text"  %>
          </div>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: :password_confirmation %>
        </div>
        <div class="form-group">
          <%= f.submit t("devise.password.change_your_pw"), class: "btn submit-btn1" %>
        </div>
      <% end %>
      </div>
      <div class="card-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
